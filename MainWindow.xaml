<Window x:Class="Lab4_EF_Starter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_EF_Starter"
        mc:Ignorable="d"
        Title="Northwind Entity Framework App" Height="500" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Northwind EF App"
                   Grid.Row="0"
                   Style="{StaticResource AppHeaderStyle}"></TextBlock>
        <TabControl Grid.Row="1">
            <TabItem  Header="Customers" IsSelected="True"></TabItem>
            <TabItem Header="Products"></TabItem>
            <TabItem Header="Employees"></TabItem>
        </TabControl>
    </Grid>
</Window>
